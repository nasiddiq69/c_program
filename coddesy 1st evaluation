#include <stdio.h>

void print_binary(unsigned int num) {
    for (int i = 31; i >= 0; i--) {
        printf("%d", (num >> i) & 1);
        if (i % 8 == 0 && i != 0) printf(" "); // space after each byte
    }
    printf("(2) years");
}

int main() {
    printf("[Magrathea] ❤❤ Project Member Introduction ❤❤\n");
